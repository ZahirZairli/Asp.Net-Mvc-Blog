@model EntityLayer.Concrete.Message
@{
    ViewBag.Title = "DraftDetail";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
<div class="row mt-3">
    @Html.Action("MessagePartial", "WriterPanelMessage")
    <div class="col-md-9">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Qaralama </h3>
            </div>
            @using (Html.BeginForm("DraftDetail", "WriterPanelMessage", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="card-body">
                    @Html.TextBoxFor(x => x.MessageId, null, new { @class = "form-control", @readonly = "readonly", hidden = "hidden" })
                    @Html.TextBoxFor(x => x.SenderMail, null, new { @class = "form-control", @readonly = "readonly", hidden = "hidden" })
                    <div class="form-group">
                        <input class="form-control" name="RecieverMail" placeholder="Kimə:" value="@Model.RecieverMail">
                        @Html.ValidationMessageFor(x => x.RecieverMail, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="MessageSubject" placeholder="Mövzu:" value="@Model.MessageSubject">
                        @Html.ValidationMessageFor(x => x.MessageSubject, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <textarea id="compose-textarea" name="MessageContent" class="form-control" style="height: 400px"> @Html.Raw(Model.MessageContent)</textarea>
                        @Html.ValidationMessageFor(x => x.MessageContent, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="card-footer">
                    <div class="float-right">
                        <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i>Göndər</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


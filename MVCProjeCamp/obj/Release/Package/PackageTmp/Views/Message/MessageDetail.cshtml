@model EntityLayer.Concrete.Message
@{
    ViewBag.Title = "MessageDetail";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="row mt-3">
    @Html.Action("ContactGeneralPartial", "Contact")
    <div class="col-md-9">
        <div class="card card-primary card-outline">
            <div class="card-body p-0">
                <div class="table-responsive mailbox-messages">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Mesaj detalı</h3>
                        </div>
                        <div class="card-body p-0">
                            <div class="mailbox-read-info">
                                <h5>Mövzu: @Model.MessageSubject</h5>
                                <h6>
                                    Kimdən: @Model.SenderMail
                                    <span class="mailbox-read-time float-right">@(((DateTime)Model.MessageDate).ToString("dd/MMM/yyyy"))</span>
                                </h6>
                            </div>

@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<div class="text-center" style="width: 100%;padding: 10px;">
    <a href="javascript:history.back()" style="float: left;display: inline-block;" class="btn btn-danger">Geri qayıt</a>
    <h5 style="display: inline-block;">Başlığa düzəliş et&nbsp; <i class="nav-icon fas fa-arrow-alt-circle-down text-info"></i></h5>
    <hr />
</div>
<div class="col-md-12">
    @using (Html.BeginForm("EditHeading", "WriterPanelHeading", FormMethod.Post))
    {
        <div class="row">
            <div class="col-6">
                @Html.TextBoxFor(x => x.HeadingId, null, new { @class = "form-control", @readonly = "readonly", hidden = "hidden" })
                @Html.TextBoxFor(x => x.WriterId, null, new { @class = "form-control", @readonly = "readonly", hidden = "hidden" })
                @Html.TextBoxFor(x => x.HeadingDate, null, new { @class = "form-control", @readonly = "readonly", hidden = "hidden" })
                @Html.Label("Başlıq")
                @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(x => x.HeadingName, null, new { @class = "text-danger" })
            </div>
            <div class="col-6">
                @Html.Label("Kateqoriya")
                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.categories, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <button class="btn btn-info">Yadda saxla</button>
    }
</div>


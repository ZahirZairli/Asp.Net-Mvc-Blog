<div class="col-md-3">
    <a href="/WriterPanelMessage/NewMessage" class="btn btn-primary btn-block mb-3">
        <i class="fas fa-plus"></i>&nbsp;  Yeni mesaj
    </a>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Seçimlər</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item active">
                    <div class="card">
                        <div class="card-header">

                            <i class="fas fa-inbox"></i> Gələn(@ViewBag.countInbox)
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <ul class="nav nav-pills flex-column">
                                <li class="nav-item">
                                    <a href="/WriterPanelMessage/Inbox/1" class="nav-link">
                                        <i class="far fa-envelope"></i> Oxunmamış
                                        <span class="badge bg-primary float-right">@ViewBag.countNotReaded</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/WriterPanelMessage/Inbox/2" class="nav-link">
                                        <i class="far fa-envelope"></i> Oxunmuş
                                        <span class="badge bg-primary float-right">@ViewBag.countReaded</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </li>
                <li class="nav-item">
                    <a href="/WriterPanelMessage/Sending" class="nav-link">
                        <i class="far fa-envelope"></i> Göndərilən
                        <span class="badge bg-primary float-right">@ViewBag.countSending</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/WriterPanelMessage/Drafts" class="nav-link">
                        <i class="far fa-file-alt"></i> Qaralama
                        <span class="badge bg-warning float-right">@ViewBag.countDrafts</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/WriterPanelMessage/Trash" class="nav-link">
                        <i class="far fa-trash-alt"></i> Zibil qutusu
                        <span class="badge bg-warning float-right">@ViewBag.countTrash</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

